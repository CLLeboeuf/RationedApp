<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/getGroceryNameText"
        android:layout_width="238dp"
        android:layout_height="61dp"
        android:ems="10"
        android:hint="New Grocery" />

    <EditText
        android:id="@+id/getGroceryCategoryText"
        android:layout_width="238dp"
        android:layout_height="61dp"
        android:ems="10"
        android:hint="Category" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groceryList"
        android:layout_width="match_parent"
        android:layout_height="484dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/clearListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="Clear List" />

        <Space
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/addGroceryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Add Grocery" />

        <Space
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>

